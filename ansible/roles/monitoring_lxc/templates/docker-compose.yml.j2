services:
  grafana:
    image: grafana/grafana
    container_name: grafana
    ports:
      - 3000:3000
    restart: unless-stopped
  influxdb:
    image: influxdb:latest
    container_name: influxdb
    ports:
      - 8086:8086
      - 8086:8086/udp
    volumes:
      - "/data/influxdb:/var/lib/influxdb"
    restart: unless-stopped
